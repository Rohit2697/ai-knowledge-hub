// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(uuid())
  slug        String
  title       String
  description String
  content     String
  tags        String
  author      String
  date        String
  readingTime String
  coverImage  String
}
